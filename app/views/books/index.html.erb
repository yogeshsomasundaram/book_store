<html>
<head>
<link href="/assets/books.css.scss" media="screen" rel="stylesheet" type="text/css" />
<style>
body
{
background-color:#abd0bc;
}
</style>
</head>
<body >
<h1><%= @book_name %> </h1>
<h2 align = "center"><marquee>Available Books </h2></marquee>
<img src="rails.PNG"/>
<table bgcolor="#ffffff" border = "2" cellpadding = "2" cellspacing = "2" align = "center">
  <tr>
    <th><b>Book</b></th>
    <th>Year</th>
    <th>Language</th>
	<th>Author</th>
	<th>Publication</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.book_name, book_path(book)%></td>
      <td><%= book.year%></td>
      <td><%= book.language%></td>
	  <td><%= book.author%></td>
	  <td><%= book.publication%></td>
      <td><%= link_to "Edit",edit_book_path(book)%></td>
      <td><%= link_to "Delete",book_path(book),
      method: :delete, confirm: "Are You Sure?" %></td>
    </tr>
  <% end %>
</table>

<br />
<h5 padding:20px; align = "center"><%= link_to "Add Book", new_book_path %></h5>
</body>
</html>